<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Tour"
        android:layout_gravity="center_horizontal"
        android:padding="9dp"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download_text"
        android:id="@+id/downloadTourText"
        android:layout_gravity="center_horizontal"
        android:padding="9dp"
        android:textColor="#000000"/>

    <View
        android:paddingLeft="18dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D9DDE1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="Download without media"
        android:textColor="@color/colorAccentDark"
        android:textStyle="bold"
        android:id="@+id/download_without_media" />

    <View
        android:paddingLeft="18dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D9DDE1" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:text="Download with media"
        android:textColor="@color/colorAccentDark"
        android:textStyle="bold"
        android:id="@+id/download_with_media" />

    <View
        android:paddingLeft="18dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D9DDE1" />

</LinearLayout>