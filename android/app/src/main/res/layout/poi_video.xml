<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/poiContentVideoLayout"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <TextureView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/poiContentVideoView">

    </TextureView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playButton"
            android:src="@mipmap/ic_play_arrow_white_36dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/replayButtoon"
            android:src="@mipmap/ic_replay_white_36dp"
            android:background="#000000"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/muteButton"
            android:src="@mipmap/ic_volume_off_white_36dp"
            android:background="#000000"/>

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/volumeControl"
            android:max="100"
            android:layout_weight="1"
            android:progress="50"
            android:scrollIndicators="end"
            android:thumbTint="#ffffff"
            android:background="#000000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxVolButton"
            android:src="@mipmap/ic_volume_up_white_36dp"
            android:background="#000000" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poiContentVideoDesc"
        android:padding="16dp"
        android:textColor="#000000"
        android:textStyle="italic"/>

</LinearLayout>