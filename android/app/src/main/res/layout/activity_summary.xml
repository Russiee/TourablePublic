<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activity.SummaryActivity">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tourCard"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        card_view:cardCornerRadius="4dp"
        android:elevation="8dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txtTourTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/tour_title_padding_top"
                android:gravity="center_horizontal"
                style="@style/TourTitle"
                android:textColor="@color/whiteBGText" />

            <TextView
                android:id="@+id/txtTourDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTourTitle"
                android:paddingTop="@dimen/tour_desc_padding_top"
                android:gravity="center_horizontal"
                android:textColor="@color/whiteBGText" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/CenterLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_above="@+id/updateProgressBar"

        android:layout_centerInParent="true"
        android:layout_marginBottom="44dp">

        <Button
            android:id="@+id/buttonStartTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/start_button_LR_margins"
            android:layout_marginRight="@dimen/start_button_LR_margins"
            android:layout_marginTop="@dimen/start_button_TB_margins"
            android:layout_marginBottom="@dimen/start_button_TB_margins"
            android:text="@string/summary_activity_start_tour"
            android:textColor="#ffffff"
            android:onClick="openTourActivity"/>

        <Button
            android:id="@+id/buttonUpdateTour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/start_button_LR_margins"
            android:layout_marginRight="@dimen/start_button_LR_margins"
            android:layout_marginTop="@dimen/start_button_TB_margins"
            android:layout_marginBottom="@dimen/start_button_TB_margins"
            android:visibility="gone"
            android:text="@string/summary_activity_update_tour"
            android:textColor="#ffffff"
            android:onClick="doTourUpdate"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/updateProgressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_height"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomText"
        style="@android:style/Widget.Material.ProgressBar.Horizontal"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bottomText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
