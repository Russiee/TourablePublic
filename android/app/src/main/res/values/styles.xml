<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:colorButtonNormal">#2196f3</item>
    </style>

    <!-- DownloadActivity tour title-->
    <style name="TourTitle" parent="android:Theme.Material.Light">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TourActivityTheme" parent="AppTheme">
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="ToolbarTheme" parent="android:Theme.Material.Light">
        <!-- www.google.com/design/spec/style/color.html -->
        <item name="android:colorPrimary">#9c27b0</item>
        <item name="android:colorPrimaryDark">#7b1fa2</item>
        <item name="android:colorAccent">#b2ff59</item>
    </style>

</resources>
