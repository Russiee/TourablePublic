<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorLightBackground</item>
        <item name="colorButtonNormal">#D8D9DE</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textAppearance">@color/colorDarkText</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/primary_text_disabled_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/colorDarkText</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorLightBackground</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:textAppearance">@color/colorWhiteText</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
    </style>


    <style name="summaryScreen" parent="Theme.AppCompat.Light">
         <item name="android:textColor">@color/colorDarkText</item>
    </style>

    <style name="summaryScreenTitle" parent="summaryScreen">

        <item name="android:textSize">20sp</item>
         <item name="android:textColor">@color/colorDarkText</item>
    </style>

    <!-- DownloadActivity tour title-->
    <style name="TourTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TourActivityTheme" parent="AppTheme">
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textAppearance">@color/colorDarkText</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <!-- www.google.com/design/spec/style/color.html -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textAppearance">@color/colorDarkText</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
       <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:padding">0dp</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowFrame">@null</item>
    </style>

</resources>
